<div class="row">
  <div class="col-lg">
    <label for="brand" class="mb-1">Title</label>
    {{#if rows}}
    {{#each rows}}
    <input
    value="{{this.title}}"
      type="text"
      name="title"
      class="form-control"
      placeholder="Book title"
      required
    />
    {{/each}}
    {{else}}
    <input
      type="text"
      name="title"
      class="form-control"
      placeholder="Book title"
      required
    />
    {{/if}}
  </div>
  <div class="col-lg-3">
    <label for="series" class="mb-1">Pages</label>
    {{#if rows}}
    {{#each rows}}
    <input
    value="{{this.pages}}"
      type="number"
      name="pages"
      class="form-control"
      placeholder="Number of pages"
      required
    />
    {{/each}}
    {{else}}
    <input
      type="number"
      name="pages"
      class="form-control"
      placeholder="Number of pages"
      required
    />
    {{/if}}
  </div>
  <div class="col-lg-3">
    <label for="series" class="mb-1">Price</label>
    {{#if rows}}
    {{#each rows}}
    <input
    value="{{this.price}}"
      type="number"
      name="price"
      class="form-control"
      placeholder="Book price"
      required
    />
    {{/each}}
    {{else}}
    <input
      type="number"
      name="price"
      class="form-control"
      placeholder="Book price"
      required
    />
    {{/if}}
  </div>
</div>

